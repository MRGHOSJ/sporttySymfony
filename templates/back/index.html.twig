                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        };

        // Créer le graphique
        var ctx = document.getElementById('pieChart').getContext('2d');
        new Chart(ctx, config);
    </script>
