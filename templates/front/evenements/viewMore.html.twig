            <div class="blog_left_sidebar">
                {% for event in events |sort((a, b) => b.dateEvent > a.dateEvent ? 1 : -1) %}
                <article class="blog_item">
                    <div class="blog_item_img">
                        <!-- Utiliser la date de l'événement et la formater -->
                        <a href="/" class="blog_item_date">
                            <h3>{{ event.dateEvent|date('d') }}</h3>
                            <p>{{ event.dateEvent|date('M') }}</p>
                        </a>
                    </div>
                    <div class="blog_details">
                        <!-- Utiliser le titre de l'événement -->
                        <h2>{{ event.nomEvent }}</h2>
                        <!-- Ajouter la description de l'événement -->
                        <p>{{ event.descriEvent }}</p>
                        <!-- Afficher le lieu et le nombre de participants -->
                        <p>Place: {{ event.lieuEvent }} | Participants: {{ event.nbrPar }}</p>
                        
                       <!-- Vérifier si l'utilisateur a déjà participé à cet événement -->
           {% if participationExists[event.idEvent] %}
    <p style="color: green; font-weight: bold;">You have already participated</p>
             {% elseif event.dateEvent <  date() %}
                    <p style="color: red; font-weight: bold;">The event has already passed</p>
{% else %}
    <a href="{{ path('participate', {'id': event.idEvent}) }}" class="boxed-btn3">Participate</a>
{% endif %}
                    </div>
                </article>
                {% endfor %}

